SHELL = /bin/bash

CXX = @CXX@
FC = @FC@

CPPFLAGS = @CPPFLAGS@ -I../include

CXXFLAGS = $(CPPFLAGS) @CXXFLAGS@ @OPENMP_CXXFLAGS@
FCFLAGS = $(CPPFLAGS) @FCFLAGS@ @OPENMP_FCFLAGS@

AR = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/libpragmatic.a

VPATH = ./:./src

objects = pragmatic.o  pragmatic_Fortran.o

.SUFFIXES: .F90 .cpp .o

# cancel implicit rule that tries to make .o from .mod with m2c:
%.o: %.mod

.cpp.o:
	@$(CXX) $(CXXFLAGS) -c $<
.F90.o:
	@$(FC) $(FCFLAGS) -c $<

default: lib

lib: $(objects)
	mkdir -p ../lib
	$(AR) $(ARFLAGS) $(LIB) $(objects)
	cp *.mod ../include/

clean:
	rm -rf *.o *.mod
